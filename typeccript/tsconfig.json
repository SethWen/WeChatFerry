{
  "compilerOptions": {
    "outDir": "dist",
    "newLine": "lf",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "target": "es2019",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "pretty": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "listFiles": true,
    "ignoreDeprecations": "5.0"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
